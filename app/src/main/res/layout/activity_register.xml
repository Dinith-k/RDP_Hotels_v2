<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffb900"
    tools:context=".login.register">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="50dp"
            android:background="@mipmap/back1mdpi"
            android:layout_marginStart="20dp"
            android:layout_height="40dp"
            />

        <TextView
            android:id="@+id/back2"
            android:layout_marginTop="5dp"
            android:text="Sign In"
            android:textColor="#000"
            android:textAlignment="viewEnd"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"
            />




    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <TextView

            android:layout_width="match_parent"
            android:text="Register"
            android:textColor="#000"
            android:fontFamily="@font/acuminvariableconcept"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="80dp"
            android:textSize="28dp"
            android:layout_height="wrap_content"/>



        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:text="The finest star class hotel in Sri Lanka with
the best of dinning, accommodation and entertainment facilities."
            android:textColor="#000"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="18dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <RelativeLayout
        android:background="@drawable/round_gb_white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginTop="220dp"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_marginStart="40dp"
                android:textColor="#707070"
                app:backgroundTint="#f5f5f5"
                android:hint="           Email"
                android:textSize="22dp"
                android:padding="15dp"
                android:singleLine="true"
                android:textColorHint="#c6c5c4"
                android:layout_marginEnd="40dp"
                android:background="@drawable/edittext_bg"
                android:layout_height="70dp"/>


            <EditText
                android:id="@+id/password"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_marginStart="40dp"
                android:textColor="#707070"
                app:backgroundTint="#f5f5f5"
                android:hint="           Password"
                android:textSize="22dp"
                android:padding="15dp"
                android:singleLine="true"
                android:password="true"
                android:textColorHint="#c6c5c4"
                android:layout_marginEnd="40dp"
                android:background="@drawable/edittext_bg"
                android:layout_height="70dp"/>

            <EditText
                android:id="@+id/password2"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:password="true"
                android:layout_marginStart="40dp"
                android:textColor="#707070"
                android:padding="15dp"
                android:singleLine="true"
                app:backgroundTint="#f5f5f5"
                android:hint="           Re type Password"
                android:textSize="22dp"
                android:textColorHint="#c6c5c4"
                android:layout_marginEnd="40dp"
                android:background="@drawable/edittext_bg"
                android:layout_height="70dp"/>


            <ImageButton
                android:id="@+id/signuo"
                android:layout_marginTop="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"

                android:layout_width="wrap_content"
                android:background="@mipmap/signupmdpi"
                android:layout_height="75dp"/>


            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:textColor="#c6c5c4"
                android:text="OR"
                android:textSize="26dp"
                android:textAlignment="center"
                android:layout_marginEnd="40dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_height="100dp">

        <ImageButton
            android:id="@+id/google_login2"
            android:layout_marginTop="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_width="wrap_content"
            android:background="@mipmap/googlemdpi"
            android:layout_height="80dp"/>

    </RelativeLayout>





</RelativeLayout>