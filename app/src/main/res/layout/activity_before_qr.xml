<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffb900"
    tools:context=".ui.qr.before_qr">

    <LinearLayout
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/round_liner"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:text="Success"
            android:layout_marginTop="80dp"
            android:textColor="#000"
            android:textSize="37dp"
            android:fontFamily="@font/acuminvariableconcept"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/room_total"
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            app:backgroundTint="#E2E2E2"
            android:hint="Room Name          Total 129,00"
            android:padding="5dp"
            android:textSize="20dp"
            android:singleLine="true"
            android:textColorHint="#000"
            android:layout_marginEnd="40dp"
            android:background="@drawable/textview_r"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/menu_total"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            app:backgroundTint="#E2E2E2"
            android:hint="Menu Order          Total 2900"
            android:padding="5dp"
            android:textSize="20dp"
            android:singleLine="true"
            android:textColorHint="#000"
            android:layout_marginEnd="40dp"
            android:background="@drawable/textview_r"
            android:layout_height="wrap_content"/>

        


        <TextView
            android:id="@+id/total"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            app:backgroundTint="#E2E2E2"
            android:textAlignment="center"
            android:hint="Total   130,000"
            android:padding="15dp"
            android:textSize="25dp"
            android:singleLine="true"
            android:textColorHint="#000"
            android:layout_marginEnd="40dp"
            android:background="@drawable/textview_r"
            android:layout_height="wrap_content"/>




        <ImageButton
            android:id="@+id/show_qr"
            android:layout_marginTop="150dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_width="wrap_content"
            android:background="@drawable/shoq_qrmdpi"
            android:layout_height="60dp"/>

    </LinearLayout>


<LinearLayout
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:background="@drawable/tick"
        android:layout_marginTop="25dp"
        android:layout_width="150dp"
        android:layout_height="150dp" />
</LinearLayout>


</RelativeLayout>