<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/white_bg"
    android:layout_height="match_parent"
    tools:context=".ui.menu.view_food">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/back"
        android:layout_width="50dp"
        android:background="@drawable/back2mdpi"
        android:layout_marginStart="20dp"
        android:layout_height="40dp"
        />


        <TextView
android:id="@+id/title"
        android:layout_width="280dp"
        android:layout_marginTop="40dp"
        android:textColor="#000"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/acuminvariableconcept"
        android:text="Vegetable Pizza"
        android:textSize="55dp"
        android:layout_height="wrap_content"
        />

        <TextView
            android:layout_marginTop="70dp"
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:text="Size"
            android:textSize="20dp"
            android:fontFamily="@font/acuminvariableconcept"
            android:textColor="#000"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="Large"
            android:textSize="23dp"
            android:fontFamily="@font/lacamedium"
            android:textColor="#000"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:text="Availability"
            android:textSize="20dp"
            android:fontFamily="@font/acuminvariableconcept"
            android:textColor="#000"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="breakfast
"
            android:textSize="18dp"
            android:fontFamily="@font/lacamedium"
            android:textColor="#000"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="Lunch"
            android:textSize="18dp"
            android:fontFamily="@font/lacamedium"
            android:textColor="#000"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="Dinner"
            android:textSize="18dp"
            android:fontFamily="@font/lacamedium"
            android:textColor="#000"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"/>




        <EditText
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
           android:hint="Quantity"
            android:phoneNumber="true"
            android:id="@+id/qunt"
            android:textSize="23dp"
            android:fontFamily="@font/lacamedium"
            android:textColor="#000"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"/>



        <TextView
            android:id="@+id/price"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:text="Price"
         android:textAlignment="center"
            android:textSize="28dp"
            android:fontFamily="@font/lacamedium"
            android:textColor="#000"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_height="100dp">

        <ImageButton
            android:id="@+id/add_to_cart"

            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_width="wrap_content"
            android:background="@drawable/add_cartmdpi"
            android:layout_height="80dp"/>

    </RelativeLayout>

    
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgg"
            android:layout_marginTop="-80dp"
            android:layout_marginStart="300dp"

            android:layout_width="400dp"
            android:layout_height="400dp"/>


    </LinearLayout>





</RelativeLayout>