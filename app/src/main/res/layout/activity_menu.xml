<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/f_bg"
    android:layout_height="match_parent"
    tools:context=".ui.menu.menu">


    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"

            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="50dp"
                android:background="@drawable/back2mdpi"
                android:layout_marginStart="20dp"
                android:layout_height="40dp"
                />



            <ImageButton
                android:id="@+id/profile"
                android:layout_marginTop="-40dp"
                android:textColor="#000"
                android:layout_gravity="right"
                android:textSize="20dp"
                android:background="@mipmap/cartmdpi"
                android:layout_width="50dp"
                android:layout_marginEnd="20dp"
                android:layout_height="50dp"
                />

            <TextView
                android:id="@+id/cart_count"
                android:layout_marginTop="-50dp"
                android:textColor="#000"
                android:layout_gravity="right"
                android:textSize="18dp"
               android:text="0"
                android:fontFamily="@font/lacalite"
                android:layout_width="50dp"
                android:layout_marginEnd="-14dp"
                android:layout_height="50dp"
                />

            <TextView

                android:layout_width="match_parent"
                android:layout_marginTop="-40dp"
                android:textColor="#000"
                android:textAlignment="center"
                android:fontFamily="@font/acuminvariableconcept"
                android:text="Select Food"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                />



        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:text="categories"
                android:textSize="20dp"
                android:fontFamily="@font/acuminvariableconcept"
                android:textColor="#000"
                android:layout_marginStart="40dp"
                android:layout_height="wrap_content"/>







        </LinearLayout>

        <HorizontalScrollView
            android:layout_marginTop="30dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/innerLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageButton
                    android:layout_marginStart="40dp"

                    android:layout_width="100dp"
                    android:background="@drawable/wifi_dmdpi"
                    android:layout_height="110dp"/>

                <ImageButton
                    android:layout_marginStart="40dp"
                    android:layout_width="100dp"
                    android:background="@drawable/gym_dmdpi"
                    android:layout_height="110dp"/>

                <ImageButton
                    android:layout_marginStart="40dp"
                    android:layout_width="100dp"
                    android:background="@drawable/f_lmdpi"
                    android:layout_height="110dp"/>
                <ImageButton
                    android:layout_marginStart="40dp"
                    android:layout_width="100dp"
                    android:background="@drawable/tra_dmdpi"
                    android:layout_height="110dp"/>


            </LinearLayout>


        </HorizontalScrollView>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:text="Result"
            android:textSize="23dp"
            android:fontFamily="@font/acuminvariableconcept"
            android:textColor="#000"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"/>




        <androidx.recyclerview.widget.RecyclerView
            android:visibility="visible"
            android:layout_marginTop="50dp"
            android:id="@+id/food_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



    </LinearLayout>

    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/progress2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />


</RelativeLayout>