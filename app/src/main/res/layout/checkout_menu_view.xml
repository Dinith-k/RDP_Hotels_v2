<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_liner"
        android:backgroundTint="#f2f0f0"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView

            android:layout_marginTop="5dp"

            android:layout_width="wrap_content"
            android:text="x"
            android:textSize="30dp"
            android:fontFamily="@font/acuminvariableconcept"
            android:textColor="#000"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content"/>

        <TextView

            android:layout_marginTop="0dp"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:text="Vegetable Pizza   999"
            android:textSize="20dp"
            android:fontFamily="@font/acuminvariableconcept"
            android:textColor="#000"
            android:layout_marginStart="140dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/image_v"
            android:layout_marginTop="-30dp"
            android:layout_width="110dp"
android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:layout_height="110dp"/>

        <TextView
            android:id="@+id/desc_"
            android:layout_marginStart="140dp"
            android:layout_width="wrap_content"
            android:text="Size Large"
            android:layout_marginTop="-50dp"
            android:textSize="18dp"
            android:fontFamily="@font/acuminvariableconcept"
            android:textColor="#000"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginStart="140dp"
            android:layout_width="wrap_content"
            android:text="Quantity"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:fontFamily="@font/acuminvariableconcept"
            android:textColor="#000"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="@drawable/r_bg_update"
            android:orientation="horizontal"
            android:padding="3dp"
            android:layout_marginTop="-23dp"
            android:layout_marginStart="280dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:text="0"
                android:textSize="15dp"
                android:fontFamily="@font/acuminvariableconcept"
                android:layout_height="wrap_content"/>


            <Spinner
                android:id="@+id/date_count"
                android:layout_width="wrap_content"
                android:text="0"
                android:textSize="15dp"
                android:fontFamily="@font/acuminvariableconcept"
                android:layout_height="wrap_content"/>


        </LinearLayout>


</LinearLayout>

</RelativeLayout>