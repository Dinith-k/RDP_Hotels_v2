<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_marginTop="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@drawable/round_liner"
        android:backgroundTint="#e0e0e0"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="180dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/key"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:textSize="2dp"
                android:textColor="#fff"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:text="Luxury  Room"
                android:textSize="23dp"
                android:fontFamily="@font/acuminvariableconcept"
                android:textColor="#000"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:text="LKR 18 500"
                android:textColor="#000"
                android:textSize="15dp"
                android:fontFamily="@font/acuminvariableconcept"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/room_type"
                android:layout_width="wrap_content"
                android:text="Double room"
                android:textSize="15dp"
                android:fontFamily="@font/acuminvariableconcept"
                android:textColor="#000"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"/>

            <TextView

                android:layout_width="match_parent"
                android:text="Per night"
                android:textColor="#000"
                android:textSize="15dp"
                android:fontFamily="@font/acuminvariableconcept"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/delete69"
                android:layout_marginLeft="12dp"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:shadowRadius="200"
                android:soundEffectsEnabled="true"
                android:backgroundTint="#FF0000"
                android:text="Delete"
                app:cornerRadius="20dp" />



            <Button
                android:id="@+id/update"
                android:layout_marginLeft="12dp"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:shadowRadius="200"
                android:soundEffectsEnabled="true"
                android:text="Update"
                app:cornerRadius="20dp" />

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>