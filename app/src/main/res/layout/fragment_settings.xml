<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:background="#ffb900"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">


    <TextView
        android:layout_width="match_parent"
        android:textColor="#000"
        android:layout_marginTop="35dp"
        android:textAlignment="center"
        android:fontFamily="@font/acuminvariableconcept"
        android:textSize="25dp"
        android:text="Settings"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"
        />




    <RelativeLayout
        android:background="@drawable/round_gb_white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginTop="150dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/setemail"
                android:layout_width="wrap_content"
                android:layout_marginStart="40dp"
                android:textColor="#000"
                android:fontFamily="@font/montserratregular"
                android:textSize="18dp"
                android:text="loading@email.com"
                android:layout_height="wrap_content"/>


            <EditText
                android:id="@+id/getname"
                android:layout_width="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginTop="50dp"
                android:textColor="#707070"
                app:backgroundTint="#f5f5f5"
                android:hint="Name"
                android:textAlignment="center"
                android:textSize="22dp"
                android:padding="15dp"
                android:singleLine="true"
                android:textColorHint="#c6c5c4"
                android:layout_marginEnd="40dp"
                android:background="@drawable/edittext_bg"
                android:layout_height="60dp"/>


            <EditText
                android:id="@+id/getpassword"
                android:visibility="gone"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_marginStart="40dp"
                android:textColor="#707070"
                android:padding="15dp"
                android:singleLine="true"
                android:password="true"
                app:backgroundTint="#f5f5f5"
                android:hint="*******"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textColorHint="#c6c5c4"
                android:layout_marginEnd="40dp"
                android:background="@drawable/edittext_bg"
                android:layout_height="60dp"/>

            <ImageButton
                android:id="@+id/changepw"
                android:layout_marginTop="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_width="wrap_content"
                android:background="@drawable/update_btnmdpi"
                android:layout_height="50dp"/>


            <ImageButton
                android:id="@+id/changepasss"
                android:layout_marginTop="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_width="wrap_content"
                android:background="@drawable/change_pwmdpi"
                android:layout_height="50dp"/>



            <ImageButton
                android:id="@+id/logout"
                android:layout_marginTop="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_width="wrap_content"
                android:background="@drawable/logoutmdpi"
                android:layout_height="60dp"/>

        </LinearLayout>





    </RelativeLayout>




    <LinearLayout
        android:layout_marginTop="110dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/profile"
            android:text="Sign In"
            android:textColor="#000"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:background="@drawable/u_icon"
            android:layout_width="100dp"

            android:layout_height="100dp"
            />








    </LinearLayout>







</RelativeLayout>