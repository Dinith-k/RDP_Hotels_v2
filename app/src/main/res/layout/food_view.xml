<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_liner"
        android:backgroundTint="#f2f0f0"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:text="Vegetable Pizza "
            android:textSize="23dp"
            android:fontFamily="@font/acuminvariableconcept"
            android:textColor="#000"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/image_v"
            android:layout_marginTop="-40dp"
            android:layout_width="110dp"
            android:layout_gravity="right"
            android:layout_marginEnd="30dp"
            android:layout_height="110dp"/>

        <TextView
            android:id="@+id/desc_"
            android:layout_width="wrap_content"
            android:text="Size Large"
            android:layout_marginTop="-50dp"
            android:textSize="18dp"
            android:fontFamily="@font/acuminvariableconcept"
            android:textColor="#000"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content"/>



        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_height="85dp">

            <Button

                android:id="@+id/add_cart"
                android:text="Add to cart"
                android:layout_marginTop="30dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/half_rounf"
                android:layout_width="200dp"
                android:layout_height="100dp"/>


            <TextView



android:id="@+id/price"
                android:text="LKR 1000"
                android:layout_marginTop="40dp"
                android:textSize="23dp"
                android:textAlignment="center"
                android:layout_marginStart="200dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>




            <TextView


                android:id="@+id/S_key"
                android:text="LKR 1000"
                android:layout_marginTop="40dp"
                android:textSize="23dp"
                android:visibility="gone"
                android:textAlignment="center"
                android:layout_marginStart="200dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>